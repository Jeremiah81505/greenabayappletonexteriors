<?xml version="1.0"?>
<ruleset name="WordPress Plugin Coding Standards">
    <description>WordPress Coding Standards for MCP Adapter Initializer Plugin</description>

    <!-- Files to check -->
    <file>mcp-adapter-initializer.php</file>
    <file>includes</file>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress-Core">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Exclude rules that might be too strict for this project -->
        <exclude name="WordPress.Files.FileName"/>
        
        <!-- Allow missing translators comments for simple cases -->
        <exclude name="WordPress.WP.I18n.MissingTranslatorsComment"/>
    </rule>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>
</ruleset>
