{
    "name": "gdcorp-wordpress/mcp-adapter-initializer",
    "description": "Initializes the MCP server and handles custom authentication.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "GoDaddy",
            "homepage": "http://www.godaddy.com",
            "role": "Developer"
        }
    ],
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/gdcorp-identity/PhpAuthLibrary.git"
        }
    ],
    "require": {
        "auth-contrib/php-auth-library": "dev-master"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf",
        "phpcs:check": "phpcs --report=summary --report=source"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
